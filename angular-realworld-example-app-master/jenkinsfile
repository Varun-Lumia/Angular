pipeline {
    agent any
	
	tools{nodejs('Node JS 14')}
	
    stages {
		    
        stage('NPM Install') {
            steps {
                echo 'NPM Version'
				bat "npm install"
            
        }
		}
        stage('Build') {
            steps {
                echo 'Build..'
				bat "ng build --prod  --base-href ./ && cp CNAME dist/CNAME"
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}