pipeline {
    agent any
	
	tools{nodejs('Node JS 14')}
	
    stages {
		    
        stage('NPM Install') {
            steps {
                echo 'NPM Installation...'				
				dir("angular-realworld-example-app-master"){			
				bat label: '', script: 'npm install'
            }
        }
		}
        stage('Build') {
            steps {
                echo 'Build..'
				bat label: '', script: 'ng build --prod  --base-href ./ && cp CNAME dist/CNAME'				
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}